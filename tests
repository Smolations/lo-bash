# _::source_all -r test/date
# _::source_all -r test/cuz
# _::source_all -r test/lang
# _::source_all -r test/math
# _::source_all -r test/number
# _::source_all -r test/string
# _::source_all -r test/utility
# echo "-> $?"
echo
